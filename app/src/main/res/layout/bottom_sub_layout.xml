<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/btmCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_layout">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:id="@+id/coordinatorLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <info.sumantv.flow.bottommenu.customviews.viewpagers.SwipeDisableViewPager
                                android:id="@+id/swipeDisableViewPager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                        </info.sumantv.flow.bottommenu.customviews.viewpagers.SwipeDisableViewPager>

                        <RelativeLayout
                                android:id="@+id/rrBottomNavigation"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:gravity="bottom"
                                android:layout_alignParentBottom="true">

                            <!--  app:layout_behavior="info.celebkonnect.flow.bottommenu.customviews.views.ScrollingBehavior">-->
                            <LinearLayout
                                    android:id="@+id/llCurveBottom"
                                    android:visibility="visible"
                                    android:layout_width="match_parent"
                                    android:gravity="bottom"
                                    android:layout_height="match_parent">

                                <RelativeLayout
                                        android:id="@+id/rlHome"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginBottom="@dimen/_minus2sdp"
                                        android:background="@drawable/ic_side_new"
                                        android:layout_gravity="bottom"
                                        android:layout_height="@dimen/_40sdp">

                                    <ImageView
                                            android:id="@+id/imageViewHome"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:src="@drawable/ic_home_home_fill"/>
                                </RelativeLayout>

                                <RelativeLayout
                                        android:id="@+id/rlSearch"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginBottom="@dimen/_minus2sdp"
                                        android:background="@drawable/ic_side_new"
                                        android:layout_gravity="bottom"
                                        android:layout_height="@dimen/_40sdp">

                                    <ImageView
                                            android:id="@+id/imageViewSearch"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:src="@drawable/ic_home_search_stroke"/>
                                </RelativeLayout>

                                <RelativeLayout
                                        android:id="@+id/rlCk"
                                        android:layout_width="0dp"
                                        android:layout_weight="1.7"
                                        android:layout_marginBottom="@dimen/_minus2sdp"
                                        android:layout_height="@dimen/_60sdp">

                                    <ImageView
                                            android:id="@+id/imageViewCK"
                                            android:layout_centerHorizontal="true"
                                            android:layout_width="@dimen/_38sdp"
                                            android:layout_height="@dimen/_38sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:src="@drawable/ic_play_bott"/>

                                    <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"
                                            android:layout_alignParentBottom="true"
                                            android:background="@drawable/ic_new_bottom_bar_curve"/>
                                </RelativeLayout>

                                <RelativeLayout
                                        android:id="@+id/rlChat"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginBottom="@dimen/_minus2sdp"
                                        android:background="@drawable/ic_side_new"
                                        android:layout_gravity="bottom"
                                        android:layout_height="@dimen/_40sdp">

                                    <ImageView
                                            android:id="@+id/imageViewChat"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:src="@drawable/ic_home_chat_stroke"/>

                                    <ImageView
                                            android:id="@+id/badge_curve"
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_marginLeft="@dimen/_32sdp"
                                            android:layout_gravity="top|center_horizontal"
                                            android:background="@drawable/circle_background"
                                            android:textColor="@color/white"
                                            android:visibility="gone"
                                            android:gravity="center"/>
                                </RelativeLayout>

                                <RelativeLayout
                                        android:id="@+id/rlMenu"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginBottom="@dimen/_minus2sdp"
                                        android:background="@drawable/ic_side_new"
                                        android:layout_gravity="bottom"
                                        android:layout_height="@dimen/_40sdp">

                                    <ImageView
                                            android:id="@+id/imageViewMenu"
                                            android:layout_centerVertical="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:src="@drawable/ic_home_menu_stroke"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/_19sdp"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/lightgrey"/>

                        </RelativeLayout>


                        <ProgressBar
                                android:id="@+id/progressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:indeterminate="true"
                                android:indeterminateTint="@color/app_snack_bar_true"
                                android:visibility="gone"/>

                    </RelativeLayout>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

            </FrameLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
