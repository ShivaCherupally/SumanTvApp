<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_12sdp"
                android:paddingTop="@dimen/_25sdp">

            <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:layout_height="120dp">

                <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:srcCompat="@drawable/logo_png"/>

                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/circlegreen"/>

            </RelativeLayout>

            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Placed Successfully"
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_blue_bg"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                    <info.sumantv.flow.fontstyles.TextViewMedium
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Order Id"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/appcolor"

                            />

                    <info.sumantv.flow.fontstyles.TextViewRegular
                            android:layout_width="0dp"
                            android:id="@+id/orderId"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="-"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/appcolor"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:weightSum="2.0">

                    <info.sumantv.flow.fontstyles.TextViewMedium
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Transaction Id"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/appcolor"

                            />

                    <info.sumantv.flow.fontstyles.TextViewRegular
                            android:layout_width="0dp"
                            android:id="@+id/transactionId"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="-"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/appcolor"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:weightSum="2.0">

                    <info.sumantv.flow.fontstyles.TextViewMedium
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Date Time"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/appcolor"
                            />

                    <info.sumantv.flow.fontstyles.TextViewRegular
                            android:layout_width="0dp"
                            android:id="@+id/dateandtime"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="-"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/appcolor"
                            />
                </LinearLayout>


            </LinearLayout>


            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Details"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/appcolor"
                    android:layout_marginTop="@dimen/_12sdp"
                    />


            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/lightgrey"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                <info.sumantv.flow.fontstyles.TextViewMedium
                        android:id="@+id/order_created_with"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:maxLines="1"
                        android:padding="@dimen/three"
                        android:singleLine="true"
                        android:text="Credits"
                        android:textColor="@color/appcolor"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:orientation="vertical">

                    <info.sumantv.flow.fontstyles.TextViewRegular
                            android:id="@+id/credits"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:maxLines="1"
                            android:padding="@dimen/three"
                            android:singleLine="true"
                            android:text="-"
                            android:textColor="@color/skyblue"
                            android:textSize="@dimen/_12sdp"/>

                    <info.sumantv.flow.fontstyles.TextViewRegular
                            android:id="@+id/amountcountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:maxLines="1"
                            android:padding="@dimen/three"
                            android:singleLine="true"
                            android:text="-"
                            android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/lightgrey"/>

            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:maxLines="1"
                    android:padding="@dimen/three"
                    android:singleLine="true"
                    android:text="Payment Mode"
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/_12sdp"/>

            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:id="@+id/paymentmode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/_12sdp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@color/lightgrey"/>

            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Payment Information"
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/_12sdp"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_blue_bg"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/_12sdp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2.0">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Items Price"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/appcolor"

                                />

                        <info.sumantv.flow.fontstyles.TextViewRegular
                                android:layout_width="0dp"
                                android:id="@+id/itemprice"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="-"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="end"
                                android:textColor="@color/appcolor"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:weightSum="2.0">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total before Tax"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/appcolor"
                                />

                        <info.sumantv.flow.fontstyles.TextViewRegular
                                android:layout_width="0dp"
                                android:id="@+id/totalbeforetax"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="-"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="end"
                                android:textColor="@color/appcolor"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:weightSum="2.0">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/taxlabel"
                                android:text="Tax (18%)"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/appcolor"
                                />

                        <info.sumantv.flow.fontstyles.TextViewRegular
                                android:layout_width="0dp"
                                android:id="@+id/taxamount"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="-"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="end"
                                android:textColor="@color/appcolor"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:weightSum="2.0">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/appcolor"
                                />

                        <info.sumantv.flow.fontstyles.TextViewMedium
                                android:layout_width="0dp"
                                android:id="@+id/total"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="-"
                                android:gravity="end"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/appcolor"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:weightSum="2.0">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Order Total"
                                android:textSize="@dimen/_18sdp"
                                android:textColor="@color/appcolor"
                                />

                        <info.sumantv.flow.fontstyles.TextViewRegular
                                android:layout_width="0dp"
                                android:id="@+id/ordertotal"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="-"
                                android:gravity="end"
                                android:textSize="@dimen/_18sdp"
                                android:textColor="@color/skyblueNew"
                                />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <info.sumantv.flow.fontstyles.ButtonMedium
                    android:id="@+id/donebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/submit_rectangle"
                    android:text="Done"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
