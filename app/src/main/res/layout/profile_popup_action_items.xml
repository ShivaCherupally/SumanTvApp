<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center">

    <LinearLayout
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingRight="@dimen/_5sdp"
            android:layout_height="@dimen/_260sdp">

        <RelativeLayout

                android:layout_width="match_parent"

                android:layout_height="@dimen/_190sdp"
                >

            <info.sumantv.flow.commonuses.TopCropImageView
                    android:id="@+id/imageViewProfilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_profile_square_pleace_holder"/>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg_black"
                    />


            <info.sumantv.flow.commonuses.ProportionalImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    app:srcCompat="@drawable/ic_placeholder"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"

                    android:layout_alignParentBottom="true">

                <TextView
                        android:id="@+id/textViewProf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAllCaps="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        />

                <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_25sdp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                    android:id="@+id/close_popup"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    app:srcCompat="@drawable/ic_close"
                    android:tint="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    />
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/_70sdp"
                >

            <TextView
                    android:id="@+id/textViewFullProfile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="Full Profile"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/skyblueNew"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <ImageView
                        android:id="@+id/profileIcon"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_profile"
                        android:tint="@color/skyblueNew"/>

                <ImageView
                        android:id="@+id/callIcon"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_pop_up_call"
                        android:tint="@color/skyblueNew"/>

                <ImageView
                        android:id="@+id/videoCallIcon"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp"
                        app:srcCompat="@drawable/ic_pop_up_video_call"
                        android:tint="@color/skyblueNew"/>

                <ImageView
                        android:id="@+id/messageIcon"
                        android:padding="@dimen/_10sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_pop_up_chat"
                        android:tint="@color/skyblueNew"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangel_box_grey_border"
            android:visibility="gone">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/rectangel_box_grey_border"
                app:cardBackgroundColor="@color/white">

            <ImageView

                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/five"
                    android:clickable="true"
                    android:src="@drawable/ic_close_circular_button_symbol"
                    android:visibility="gone"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_pic"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/celeb_circular_image"
                            android:transitionName="popup_profile_image_trans"
                            android:visibility="gone"
                            app:civ_border_color="@color/lightgrey"
                            app:civ_border_width="2dp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Sandy"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"/>

                    <TextView
                            android:id="@+id/profile_role"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Role"
                            android:textAlignment="center"
                            android:textColor="@color/lite_gray"
                            android:textSize="@dimen/_10sdp"/>

                    <TextView
                            android:id="@+id/content_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                    <Button
                            android:id="@+id/profile_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1.0"
                            android:background="@drawable/rectangle_white_bg"
                            android:backgroundTint="@color/sharecolor"
                            android:text="View Profile"/>

                    <Button
                            android:id="@+id/profile_follow"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1.0"
                            android:background="@color/skyblue"
                            android:text="Follow"
                            android:textColor="@color/white"/>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangel_box_grey_border">

                <info.sumantv.flow.commonuses.ProportionalImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        app:srcCompat="@drawable/ic_placeholder"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="#90000000">

                    <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="left"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text="Name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rectangel_box_grey_2side_border"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:weightSum="8">


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
