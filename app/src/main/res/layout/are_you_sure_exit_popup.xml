<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_rectangle_with_out_storke"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_rectangle_with_out_storke"
                >

            <ImageView
                    android:id="@+id/close_popup"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/five"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_close_circular_button_symbol"
                    android:visibility="gone"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_pic"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/celeb_circular_image"
                            android:transitionName="popup_profile_image_trans"
                            android:visibility="gone"
                            app:civ_border_color="@color/lightgrey"
                            app:civ_border_width="2dp"/>

                    <info.dkapp.flow.fontstyles.TextViewSemiBold
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_1sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="CelebKonect"
                            android:textAlignment="center"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="@color/lightgrey"/>

                    <info.dkapp.flow.fontstyles.TextViewMedium
                            android:id="@+id/description_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_1sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="Are you sure you want to exit CelebKonect ?"
                            android:textAlignment="center"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp"/>


                    <TextView
                            android:id="@+id/content_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal"
                        >

                    <info.dkapp.flow.fontstyles.ButtonMedium
                            android:id="@+id/nobtn"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1.5"
                            android:background="@drawable/submit_rectangle"
                            android:text="NO"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="@dimen/_10sdp"/>

                    <info.dkapp.flow.fontstyles.ButtonMedium
                            android:id="@+id/yesBtn"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1.5"
                            android:background="@drawable/submit_rectangle"
                            android:text="YES"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
