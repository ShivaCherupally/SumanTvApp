<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/managerBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewManagerPic"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/celeb_circular_image"
            android:transitionName="popup_profile_image_trans"

            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp">

            <TextView
                android:id="@+id/textViewCelebrityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="@dimen/_5sdp"
                android:text="Add celebrity" />
        </LinearLayout>

        <TextView
            android:background="@color/white"
            android:id="@+id/textViewManagerName"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:text="ManagerName" />
    <LinearLayout
        android:layout_width="@dimen/_30sdp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/ibEdit"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/white"
            android:contentDescription="@string/image"
            android:padding="8dp"
            android:rotation="90"
            android:tint="@color/gray"
            android:scaleType="centerInside"
            android:src="@drawable/more_options" />
    </LinearLayout>

    </LinearLayout>



</LinearLayout>