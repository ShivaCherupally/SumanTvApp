<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_3sdp"
    android:paddingTop="@dimen/_3sdp">

    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"
            android:src="@drawable/ic_profile_circle_pleace_holder"
            android:transitionName="popup_profile_image_trans"
            app:civ_border_color="@color/light_gray"
            app:civ_border_width="0.5dp" />

        <info.dkapp.flow.fontstyles.TextViewSemiBold
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cicleLayout"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <info.dkapp.flow.fontstyles.TextViewRegular
            android:id="@+id/profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_2sdp"
            android:maxLines="1"
            android:text="Profession"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/lite_gray_txt"
            android:textSize="@dimen/_10sdp" />
        <info.dkapp.flow.fontstyles.TextViewRegular
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_2sdp"
            android:maxLines="1"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/lite_gray_txt"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>


</RelativeLayout>
