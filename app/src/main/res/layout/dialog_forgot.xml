<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_7sdp">
        <info.dkapp.flow.fontstyles.TextViewBold
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/color444"
                android:text="CelebKonect"
                android:gravity="center"
                android:padding="@dimen/_7sdp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_eee"/>
        <info.dkapp.flow.fontstyles.TextViewMedium
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/color222"
                android:text="CelebKonect"
                android:gravity="center"
                android:padding="@dimen/_10sdp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_3sdp">
            <info.dkapp.flow.fontstyles.ButtonMedium
                    android:id="@+id/btnRetry"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="RETRY"
                    android:visibility="gone"
                    android:textSize="@dimen/_10sdp"
                    android:background="@drawable/submit_rectangle"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/_30sdp"/>
            <info.dkapp.flow.fontstyles.ButtonMedium
                    android:id="@+id/btnOK"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="OK"
                    android:textSize="@dimen/_10sdp"
                    android:background="@drawable/submit_rectangle"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
