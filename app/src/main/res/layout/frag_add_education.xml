<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:tools="http://schemas.android.com/tools"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     android:id="@+id/coordinator_layout"
                                                     android:layout_height="match_parent"
                                                     android:background="@color/white"
                                                     tools:context="info.sumantv.flow.bottommenu.auditions.fragments.createAuditionProfile.AddExperienceFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@color/skyblueNew">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/imgClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_arrow_back_white"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/imgClose"
                        android:text="Education &amp; Training"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:visibility="visible"


                />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fitsSystemWindows="true">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                    <EditText
                            android:id="@+id/etDegree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Degree / Course"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            style="@style/etUnderline"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="10dp">
                    <EditText
                            android:id="@+id/etInstructor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Instructor"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            style="@style/etUnderline"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="10dp">
                    <EditText
                            android:id="@+id/etLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Location"
                            android:inputType="text"
                            android:imeOptions="actionDone"
                            style="@style/etUnderline"/>
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/educationLevel"/>


                <RelativeLayout
                        android:id="@+id/elEducationLevel"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:layout_marginRight="@dimen/_5sdp"
                >
                    <ImageView
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_drop_down_blue"/>
                    <Spinner
                            android:background="@null"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:layout_centerHorizontal="true"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/hash_text_color"
                            android:textColor="@color/skyblueNew"
                            android:textSize="15sp"
                            android:id="@+id/spinEducation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/educationLevel"
                            android:layout_marginRight="@dimen/_5sdp"
                            style="@style/spinnerAudition"

                    />
                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/light_gray"/>


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inistitute Name"
                        style="@style/tvEditTextLabel_Spinner"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_9sdp"
                />
                <EditText
                        android:id="@+id/etSchool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Please enter institute name"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:paddingTop="@dimen/_1sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        style="@style/EditText.Blue"
                        android:inputType="textCapSentences"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            style="@style/llAuditionSpinnerParent">
                        <!--<Spinner-->
                        <!--android:id="@+id/spinnerYears"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:entries="@array/yearOfCompletionArray"-->
                        <!--style="@style/spinnerAudition"-->
                        <!--tools:ignore="NestedWeights" />-->


                        <ImageView
                                android:visibility="gone"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/down_arrow_999"
                                android:scaleType="centerInside"
                                android:padding="5dp"
                                android:contentDescription="@string/image"/>
                    </LinearLayout>
                    <View
                            android:visibility="gone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/transparent"/>
                    <LinearLayout
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            style="@style/llAuditionSpinnerParent">
                        <Spinner
                                android:id="@+id/spinnerMonths"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:entries="@array/monthsArray"
                                style="@style/spinnerAudition"
                                tools:ignore="NestedWeights"/>
                        <ImageView
                                android:visibility="gone"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/down_arrow_999"
                                android:scaleType="centerInside"
                                android:padding="5dp"
                                android:contentDescription="@string/image"/>
                    </LinearLayout>
                </LinearLayout>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/yearOfPassout"/>

                <RelativeLayout
                        android:id="@+id/rlYear"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_5sdp"
                >
                    <ImageView
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_drop_down_blue"/>
                    <Spinner
                            android:background="@null"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:layout_centerHorizontal="true"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/hash_text_color"
                            android:textColor="@color/skyblueNew"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:id="@+id/spinnerYears"
                            android:entries="@array/yearOfCompletionArray"
                            style="@style/spinnerAudition"
                            tools:ignore="NestedWeights"

                    />
                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/light_gray"/>


                <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:background="@drawable/corner_radius_blue"
                        android:fontFamily="@string/also_signup"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"

                />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
