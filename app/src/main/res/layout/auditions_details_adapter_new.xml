<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/white"
            android:layout_height="wrap_content">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
                android:id="@+id/llNotificationBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_arrow_back"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/imgClose"
                    android:text="Notification Details"
                    android:textColor="@color/skyblueNew"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/llHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_height="wrap_content">

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvKeywords"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/skyblueNew"
                        android:layout_centerVertical="true"
                        android:maxLines="2"
                        android:padding="@dimen/_3sdp"
                        android:text="Actor "
                        android:textColor="@color/white"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:textSize="@dimen/_11sdp"/>


                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvPostedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17 Nov 2018 "
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10sdp"/>


            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvMyAuditionsExpDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 Nov 2018"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/dark_grey"
                        android:maxLines="2"
                        android:layout_toLeftOf="@+id/imageicons"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:textSize="@dimen/_10sdp"
                        />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:id="@+id/imageicons"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true">

                    <ImageButton
                            android:id="@+id/ibFavorite"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@color/white"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_fev_unfan"/>


                    <ImageButton
                            android:id="@+id/ibShare"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="right"
                            android:background="@color/white"
                            app:srcCompat="@drawable/share_blue"/>
                </LinearLayout>

            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@color/light_gray"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/lnCompanyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:text="Production Company"
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"

                        android:textAllCaps="true"
                        android:textColor="@color/approved"
                        android:textSize="@dimen/_10sdp"/>

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvCompanyName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Skbk"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10sdp"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:text="Production Titile"
                        android:textAllCaps="true"
                        android:textColor="@color/approved"
                        android:textSize="@dimen/_10sdp"/>

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvProductionTitile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10sdp"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:text="Production Type"
                        android:textAllCaps="true"
                        android:textColor="@color/approved"
                        android:textSize="@dimen/_10sdp"/>

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvProductionType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text=""
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10sdp"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:layout_height="wrap_content"
                        android:text="Sub Production Type"
                        android:textAllCaps="true"
                        android:textColor="@color/approved"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_weight="0.9"/>

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvSubProductionType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text=""
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10sdp"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="2"

                    android:orientation="horizontal">

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:layout_height="wrap_content"
                        android:text="Production Person"
                        android:textAllCaps="true"
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:textColor="@color/approved"
                        android:textSize="@dimen/_10sdp"/>

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvProductionPersion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text=""
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10sdp"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:text="Production Description"
                        android:textAllCaps="true"
                        android:textColor="@color/approved"
                        android:textSize="@dimen/_10sdp"/>

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvDetails"
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10sdp"/>
            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@color/light_gray"/>

        </LinearLayout>


        <info.dkapp.flow.fontstyles.TextViewMedium
                android:id="@+id/tvRolesCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roles"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_7sdp"
                android:textSize="@dimen/_14sdp"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"
                    android:text="Role Name"/>

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvRoleName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2"
                android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"

                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"
                    android:text="Role Type"/>

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvRoleType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2"
                android:id="@+id/llGender"
                android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.TextViewMedium

                    android:text="Gender"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"

                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"/>

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/llAgeRange"
                android:weightSum="2"
                android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"

                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/tvAgeRangeLable"
                    android:text="Age Range"
                    />

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvAgeRange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/llHeightRange"
                android:weightSum="2"
                android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"
                    android:text="Height Range"/>

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvHeightRange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/llEthnicity"
                android:weightSum="2"
                android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.9"

                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"
                    android:text="Ethnicity"/>

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvEthnicity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/llHairColor"
                android:weightSum="2"
                android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"

                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"
                    android:text="Hair Color"/>

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvHairColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/llBodyType"
                android:weightSum="2"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"

                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"
                    android:text="Body Type"/>

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvBodyType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/llEyeColor"
                android:weightSum="2"
                android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"

                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"
                    android:text="Eye Color"/>

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvEyeColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2"
                android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"
                    android:text="Role Description"
                    />

            <info.dkapp.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvRoleDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:textColor="@color/approved"
                        android:textSize="@dimen/_10sdp"
                        android:text="Media Required*"
                        />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <info.dkapp.flow.fontstyles.TextViewBold
                        android:id="@+id/tvAttachMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ATTACH MEDIA"
                        android:textColor="@color/skyblueNew"
                        android:paddingBottom="5dp"
                        android:textSize="@dimen/_11sdp"/>

                <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvMediaRequired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SJonnknk sojpojopjojojpojpojpojpojpojpojojpoj"
                        android:textColor="@color/approved"
                        android:textSize="@dimen/_10sdp"
                        />
            </LinearLayout>


        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@color/light_gray"/>


        <info.dkapp.flow.fontstyles.ButtonMedium
                android:id="@+id/btApply"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Apply"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/submit_rectangle"
                />


    </LinearLayout>

