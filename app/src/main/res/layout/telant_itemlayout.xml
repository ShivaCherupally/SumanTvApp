<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@color/managerBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTalent"
            android:layout_width="0dp"
            android:layout_height="@dimen/_70sdp"
            android:layout_weight="2.25"
            android:layout_marginBottom="@dimen/_2sdp"
            android:scaleType="centerCrop"
            android:background="@color/app_background_color"
            android:src="@drawable/ic_grey_celebkonect_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"

            android:orientation="vertical">

            <TextView
                android:paddingTop="@dimen/_7sdp"
                android:id="@+id/textViewManagerProf"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:background="@color/white"
                android:paddingLeft="@dimen/_7sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvNameTalent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_7sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAccessTalent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_7sdp"
                    android:text=""
                    android:paddingBottom="@dimen/_7sdp"
                    android:textColor="@color/skyblueNew"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvPermissionTalent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:text="Permissions : View"
                    android:textColor="@color/skyblueNew"
                    android:textSize="@dimen/_10sdp" />



            </LinearLayout>

        <TextView
            android:visibility="gone"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:text="@string/firstname" />

        <TextView
            android:visibility="gone"

            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/skyblueNew"
            android:text="View" />

        <TextView
            android:visibility="gone"

            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/_3sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="View" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvTypeTalent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/btn_sky_blue_click"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Manage"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>
        <ImageView
            android:id="@+id/imageViewNext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tint="@color/skyblueNew"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/_3sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_rigth_arrow"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/view_empty"
            android:layout_width="0dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_2sdp"
            android:visibility="gone"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/grey" />
</LinearLayout>