<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/card_View"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@color/white"
                                   app:cardElevation="1dp"
                                   android:layout_marginLeft="@dimen/_7sdp"
                                   android:layout_marginRight="@dimen/_7sdp"
                                   android:layout_marginTop="@dimen/_7sdp"
                                   app:cardMaxElevation="5dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linearLayout"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProductionNameExtra"
                    android:text="Production Title"
                    android:textAllCaps="true"
                    android:textColor="@color/approved"
                    android:textSize="@dimen/_10sdp"/>

            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvAuditionsSearchTitile"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11sdp"/>

            <!--<TextView
                    android:id="@+id/tvAuditionsStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"/>-->

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8">

                <info.sumantv.flow.fontstyles.TextViewMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textAllCaps="true"
                        android:textColor="@color/approved"
                        android:text="Posted on"
                        android:textSize="@dimen/_10sdp"/>

                <info.sumantv.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvAuditionsDate"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10sdp"
                        android:text="12-11-2222"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:id="@+id/ibFavourite"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/ic_fav_blue"
                        style="@style/ibToolbar"
                        android:contentDescription="@string/image"/>

                <ImageButton
                        android:id="@+id/ibShare"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:contentDescription="@string/image"
                        app:srcCompat="@drawable/share_blue"
                        style="@style/ibToolbar"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="Production Description"
                    android:textColor="@color/approved"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"/>

            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:id="@+id/tvAuditionsDescription"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"
                    android:text="hfrhrtht hfrhrtht  hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht hfrhrtht "/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
