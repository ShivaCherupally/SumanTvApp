<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/coordinatorLayout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background_color">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgClose"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_header_back"
                    android:tint="@color/black"
                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>
            <info.sumantv.flow.fontstyles.TextViewMedium
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/text_comments"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:elevation="2dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/submit_rectangle_for_settings_empty_10ra"
                    android:gravity="bottom"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">
                <info.sumantv.flow.fontstyles.EditTextRegular
                        android:id="@+id/etComment"
                        android:layout_width="0dp"
                        android:focusable="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="@string/text_add_comment_here"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="textMultiLine"
                        android:maxLines="8"
                        android:maxLength="250"
                        android:minHeight="@dimen/_35sdp"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/_7sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_7sdp"
                        />
                <ImageButton
                        android:id="@+id/imgSend"
                        android:visibility="invisible"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@color/transparent"
                        app:srcCompat="@drawable/ic_chat_send_round"
                        android:tint="@color/colorPrimary"
                        android:contentDescription="@string/image"
                        android:layout_gravity="bottom"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        style="@style/ibToolbar"/>
                <ImageButton
                        android:id="@+id/imgUpdate"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@color/transparent"
                        app:srcCompat="@drawable/ic_chat_send_round"
                        android:tint="@color/colorPrimary"
                        android:contentDescription="@string/image"
                        android:layout_gravity="bottom"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        style="@style/ibToolbar"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
