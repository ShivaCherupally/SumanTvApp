<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/managerBackgroundColor"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imageViewManagerPic"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:scaleType="centerCrop"
        android:background="@color/app_background_color"
        android:src="@drawable/ic_grey_celebkonect_logo" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_3sdp"
        android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_weight="1">
        <info.dkapp.flow.fontstyles.TextViewMedium
            android:id="@+id/textViewManagerProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_9sdp" />
        <ImageView
            android:id="@+id/imageview_status"
            android:visibility="gone"
            android:layout_width="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/ic_profile_circle_pleace_holder"/>
    </LinearLayout>
        <info.dkapp.flow.fontstyles.TextViewMedium
            android:id="@+id/textViewManagerName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="top|left"
            android:paddingLeft="@dimen/_7sdp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="horizontal">

            <info.dkapp.flow.fontstyles.ButtonMedium
                android:id="@+id/button_viewProfile"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center|left"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_7sdp"
                android:text="View Profile"
                android:textColor="@color/skyblueNew"
                android:textSize="@dimen/_10sdp" />

            <info.dkapp.flow.fontstyles.ButtonMedium
                android:id="@+id/button_accept"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="Accept"
                android:textColor="@color/skyblueNew"
                android:textSize="@dimen/_10sdp" />

            <info.dkapp.flow.fontstyles.ButtonMedium
                android:id="@+id/button_reject"
                android:paddingBottom="@dimen/_5sdp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="Reject"
                android:textColor="@color/skyblueNew"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
