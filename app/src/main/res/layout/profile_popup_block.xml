<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/transparent"
                android:gravity="center">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:background="@color/white">

            <ImageView

                    android:id="@+id/close_popup"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop= "@dimen/_10sdp"
                    android:clickable="true"
                    android:src="@drawable/ic_close_circular_button_symbol"
                    android:visibility="gone" />

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_pic"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/ic_grey_celebkonect_logo"
                            android:transitionName="popup_profile_image_trans"
                            app:civ_border_color="@color/lightgrey"
                            app:civ_border_width="2dp" />

                    <TextView
                            android:id="@+id/profile_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="CelebKonect"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                    <TextView
                            android:id="@+id/profile_role"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Role"
                            android:textAlignment="center"
                            android:textColor="@color/lite_gray"
                            android:textSize="@dimen/_10sdp" />

                    <TextView
                            android:id="@+id/content_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="fgdfgdfg"
                            android:textAlignment="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp"
                        android:orientation="horizontal"
                >

                    <Button
                            android:id="@+id/profile_view"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_30sdp"
                            android:textColor="@color/white"
                            android:background="@drawable/submit_rectangle"
                            android:backgroundTint="@color/sharecolor"
                            android:text="View Profile" />

                    <Button
                            android:id="@+id/profile_follow"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:textColor="@color/white"
                            android:background="@drawable/submit_rectangle"
                            android:text="Follow" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
            android:id="@+id/avail_creditstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avail Bal: "
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />
</RelativeLayout>