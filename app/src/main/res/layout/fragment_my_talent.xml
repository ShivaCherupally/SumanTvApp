<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:tools="http://schemas.android.com/tools"
                                                     android:id="@+id/coordinator_layout"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:background="@color/white"
                                                     android:orientation="vertical"
                                                     tools:context="info.dkapp.flow.managermodule.fragments.MyClientFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgError"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:elevation="@dimen/five"
                app:srcCompat="@drawable/ic_nodata" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="No Data Available"
                android:textAlignment="center"
                android:textColor="@color/lite_gray"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linear_permissionview"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:background="@color/managerBackgroundColor"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageViewManagerPic"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="2.25"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:scaleType="centerCrop"
                    android:background="@color/app_background_color"
                    android:src="@drawable/ic_profile_square_pleace_holder" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="vertical">

                    <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/textViewManagerProf"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom|left"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/_7sdp"
                        android:text=""
                        android:textColor="@color/approved"
                        android:textSize="@dimen/_9sdp" />

                    <info.dkapp.flow.fontstyles.TextViewMedium
                        android:id="@+id/textViewManagerName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="top|left"
                        android:paddingLeft="@dimen/_7sdp"
                        android:text=""
                        android:paddingTop="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <info.dkapp.flow.fontstyles.TextViewMedium
                            android:id="@+id/tvAccessTalent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center|left"
                            android:textStyle="bold"
                            android:paddingLeft="@dimen/_7sdp"
                            android:text=""
                            android:textColor="@color/skyblueNew"
                            android:textSize="@dimen/_11sdp" />



                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageViewNext"
                    android:layout_width="match_parent"
                    android:tint="@color/skyblueNew"
                    android:visibility="gone"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_rigth_arrow"

                    android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linerlayoutSettings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/gray_background"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:text="View"/>
                <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_12sdp"
                    android:text="Edit"/>
                <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_12sdp"
                    android:text="Full"/>

            </LinearLayout>


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycerview_mytalent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <Button
                android:id="@+id/bt_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/submit_rectangle_tran"
                android:text="Back" />
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
