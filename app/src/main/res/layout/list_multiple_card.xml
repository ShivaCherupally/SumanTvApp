<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_95sdp"
    android:layout_margin="@dimen/_4sdp"
    android:background="@drawable/rectangle_skyblue"
    android:backgroundTint="@color/preference_grey"
    android:orientation="horizontal"
    android:padding="0.1dp"
    android:weightSum="3.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_95sdp">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/celebkonnectlogo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:background="@drawable/prefestriphead">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:maxLength="14"
                    android:padding="@dimen/_2sdp"
                    android:text="Sample title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/parent_check_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bluetickmark"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_1sdp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:visibility="gone">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:visibility="gone">


    </LinearLayout>

</LinearLayout>