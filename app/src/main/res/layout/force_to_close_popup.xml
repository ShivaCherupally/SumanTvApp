<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_200sdp"
    android:padding="@dimen/_5sdp">


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                card_view:cardCornerRadius="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1">
                        <info.sumantv.flow.fontstyles.TextViewSemiBold
                            android:id="@+id/celeb_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:text="Secure Logout"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />

                        <info.sumantv.flow.fontstyles.TextViewRegular
                            android:id="@+id/greetingmsgtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/appcolor"
                            android:drawablePadding="@dimen/ten"
                            android:drawableTint="@color/appcolor"
                            android:gravity="center"
                            android:padding="@dimen/_15sdp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/feed_des_color"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/lightgrey"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">
                    <info.sumantv.flow.fontstyles.ButtonMedium
                            android:id="@+id/noBtn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="@string/cancel"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/skyblueNew"
                            android:layout_height="match_parent"/>
                    <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_30dp"
                            android:background="@color/lightgrey"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp"/>
                    <info.sumantv.flow.fontstyles.ButtonMedium
                            android:id="@+id/yesBtn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="Confirm"
                            android:textColor="@color/skyblueNew"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="match_parent"/>
                </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


</LinearLayout>
