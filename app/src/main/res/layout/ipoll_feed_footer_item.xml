<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/llLikeCommentIconsParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_3sdp">
            <LinearLayout
                android:id="@+id/llLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgLike"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_like_stroke" />
                    <!--<info.celebkonnect.flow.utils.likebutton.LikeButton
                        android:id="@+id/imgLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:circle_end_color="@color/skyblueNew"
                        app:circle_start_color="@color/skyblueNew"
                        app:dots_primary_color="@color/skyblueNew"
                        app:dots_secondary_color="@color/skyblueNew"
                        app:icon_size="@dimen/_24sdp"
                        app:like_drawable="@drawable/ic_like_fill"
                        app:unlike_drawable="@drawable/ic_like_stroke" />-->
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/progressBar"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/app_snack_bar_true"
                        android:padding="@dimen/_7sdp"
                        android:progressTint="@color/app_snack_bar_true" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgComment"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_comment" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_share" />

                <TextView
                    android:id="@+id/tvShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:maxLines="1"
                    android:text="@string/text_share"
                    android:textColor="@color/icon_color"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLikeComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <info.sumantv.flow.fontstyles.TextViewMedium
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/text_like"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />
            <info.sumantv.flow.fontstyles.TextViewBold
                android:id="@+id/tvDot"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="â€¢"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />
            <info.sumantv.flow.fontstyles.TextViewMedium
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/text_comment"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
