<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:transitionName="@string/transition_dialog">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <!--<ImageView-->
        <!--android:id="@+id/circleImage"-->
        <!--android:layout_width="@dimen/_75sdp"-->
        <!--android:layout_height="@dimen/_75sdp"-->
        <!--app:srcCompat="@drawable/ic_profile_square_pleace_holder" />-->

        <RelativeLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp">

            <ImageView
                    android:id="@+id/circleImage"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_profile_square_pleace_holder"/>

            <ImageView
                    android:id="@+id/circleImageHidden"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"

                    app:srcCompat="@drawable/ic_profile_square_pleace_holder"/>
        </RelativeLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp">

            <TextView
                    android:id="@+id/tvSkills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color555"
                    android:textSize="@dimen/_9sdp"/>

            <TextView
                    android:id="@+id/tvNameTalentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"/>
        </LinearLayout>

        <ImageButton
                android:id="@+id/ibFavourite"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_fav_blue"
                style="@style/ibToolbar"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/image"/>

        <ImageButton
                android:id="@+id/ibShare"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/image"
                app:srcCompat="@drawable/share_blue"
                android:layout_marginRight="10dp"
                style="@style/ibToolbar"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"/>

</LinearLayout>