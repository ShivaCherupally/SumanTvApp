<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mediainfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_1sdp"
                android:paddingTop="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/languagetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/portifoliopicss"
                        android:textColor="@color/appcolor"
                        android:textSize="14sp" />


                </LinearLayout>

                <Button
                    android:id="@+id/photosaddBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/plusblueicon" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/rectangel_box_grey_border"
                android:orientation="horizontal"
                android:padding="@dimen/three">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/portofolioRecy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_1sdp"
                android:paddingTop="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/videosaudios"
                    android:textColor="@color/appcolor"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/videosAddBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/plusblueicon" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/rectangel_box_grey_border"
                android:orientation="horizontal"
                android:padding="@dimen/three">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/multilpleRecy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_1sdp"
                android:paddingTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/showrealtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/showreals"
                    android:textColor="@color/appcolor"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/showrealBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/plusblueicon" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/rectangel_box_grey_border"
                android:orientation="horizontal"
                android:padding="@dimen/three">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/showrealRecy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_1sdp"
                android:paddingTop="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/mediadatads"
                    android:textColor="@color/appcolor"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/mediaAddbtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/plusblueicon" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/rectangel_box_grey_border"
                android:padding="@dimen/five">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mediaaRecy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mediainstructionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/knowtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:layout_marginTop="@dimen/five"
                    android:background="@color/emptycolor"
                    android:text="@string/instructions_audition"
                    android:textColor="@color/skyblue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/instructiondata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/emptycolor"
                    android:text="@string/app_name"
                    android:textColor="@color/appcolor" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>