<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five"
                android:layout_marginTop="@dimen/ten"
                android:gravity="center"
                android:paddingLeft="@dimen/three"
                android:text="Title"
                android:textColor="@color/appcolor"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/rectangel_box_grey_border"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/five">

                <Spinner
                    android:id="@+id/userTitleSpn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/appcolor"
                    android:paddingLeft="@dimen/eigth"
                    android:spinnerMode="dialog"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true">


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/upload_btn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/cicrcle_inside_text"
                    android:padding="15dp"
                    android:text="@string/uploadprofilepic"
                    android:textAllCaps="true"
                    android:textSize="@dimen/ten"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/cicleLayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/cicrcle_radius_bg_skyblue"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="@dimen/_2sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/celeb_circular_image" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:padding="2dp">

            <ImageView
                android:id="@+id/cameraicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:alpha="0.7"
                android:background="@drawable/cameraiconcionbgg" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black">

            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/appcolor"
                android:ems="10"
                android:hint="First Name *"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/appcolor"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:backgroundTint="@color/black">

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/appcolor"
                android:ems="10"
                android:hint="Last Name *"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/appcolor"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:backgroundTint="@color/black">

            <EditText
                android:id="@+id/othername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/appcolor"
                android:ems="10"
                android:hint="Other Name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/appcolor"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black">

            <EditText
                android:id="@+id/screename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/appcolor"
                android:ems="10"
                android:hint="Screen Name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/appcolor"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rectangel_box_grey_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="@dimen/five"
                            android:paddingLeft="@dimen/fifteen"
                            android:paddingRight="@dimen/fifteen"
                            android:paddingTop="@dimen/five"
                            android:spinnerMode="dialog"
                            android:text="D.O.B"
                            android:textColor="@color/appcolor" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/dobBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/five"
                        android:background="@drawable/ic_date_range_black_24dp"
                        android:backgroundTint="@color/appcolor"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/five"
                    android:gravity="center"
                    android:paddingLeft="@dimen/three"
                    android:text="Gender"
                    android:textColor="@color/appcolor"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/rectangel_box_grey_border"
                    android:orientation="horizontal">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/appcolor"
                        android:paddingLeft="@dimen/eigth"

                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateOfBirthtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/five"
                    android:gravity="center"
                    android:paddingLeft="@dimen/three"
                    android:text="Date of Birth"
                    android:textColor="@color/appcolor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/datebirttxt"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangel_box_grey_border"
                    android:paddingBottom="@dimen/five"
                    android:paddingLeft="@dimen/twenty"
                    android:paddingRight="@dimen/twenty"
                    android:paddingTop="@dimen/five"
                    android:spinnerMode="dialog"
                    android:text="Select DOB"
                    android:textColor="@color/appcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/gendertxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/five"
                    android:text="Gender"
                    android:textColor="@color/appcolor"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:background="@drawable/rectangel_box_grey_border"
                    android:paddingBottom="@dimen/five"
                    android:paddingLeft="@dimen/five"
                    android:paddingRight="@dimen/fifteen">

                    <Spinner
                        android:id="@+id/genderSpn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/appcolor"
                        android:gravity="left"

                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black">

            <EditText
                android:id="@+id/dobPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/appcolor"
                android:ems="10"
                android:hint="Place of Birth *"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/appcolor"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black">

            <EditText
                android:id="@+id/emailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/appcolor"
                android:ems="10"
                android:hint="Email *"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/appcolor"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black">

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:hint="Phone *"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/appcolor"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/select_countrytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center"
            android:paddingLeft="@dimen/three"
            android:text="Country"
            android:textColor="@color/appcolor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/select_servercountrytxt"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/five"
            android:paddingLeft="@dimen/three"
            android:text="Country"
            android:textColor="@color/appcolor"
            android:textSize="15sp"
            android:visibility="gone" />

        <!--     <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_30sdp"
                 android:layout_marginTop="@dimen/five"
                 android:background="@drawable/rectangel_box_grey_border"
                 android:gravity="center"
                 android:orientation="vertical">-->

        <Spinner
            android:id="@+id/country"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dialog"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <!--</LinearLayout>-->


        <LinearLayout
            android:id="@+id/stateAndCityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select_statetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:gravity="center"
                android:paddingLeft="@dimen/three"
                android:text="State"
                android:textColor="@color/appcolor"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/select_serverstatetxt"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="textCapWords"
                android:spinnerMode="dialog"
                android:text="State"
                android:textColor="@color/list_group_title"
                android:textSize="15sp"
                android:visibility="gone" />

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/five"
                android:background="@drawable/rectangel_box_grey_border"
                android:gravity="center"
                android:orientation="vertical">-->

            <Spinner
                android:id="@+id/stateSpn"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/appcolor"
                android:spinnerMode="dialog"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone" />


            <!--</LinearLayout>-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black">

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/appcolor"
                    android:ems="10"
                    android:hint="State *"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"

                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten"
            android:backgroundTint="@color/black">

            <EditText
                android:id="@+id/cityy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/appcolor"
                android:ems="10"
                android:hint="City *"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/appcolor"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five"
            android:gravity="center"
            android:paddingLeft="@dimen/three"
            android:text="About Me"
            android:textColor="@color/appcolor"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_aboutme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:background="@drawable/rectangle_white_bg"
            android:backgroundTint="@color/appcolor"
            android:gravity="top"
            android:hint="profile info"
            android:inputType="textMultiLine|textCapWords"
            android:padding="@dimen/ten"
            android:paddingLeft="@dimen/ten"
            android:textColor="@color/appcolor"
            android:textSize="15sp" />

    </LinearLayout>


