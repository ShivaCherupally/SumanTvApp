<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/carditem"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/mainpreferlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_black_9"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/prefercemainimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dummyimg"
                        android:alpha="0.5"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:background="@color/transparent_black_9"
                        android:gravity="center_horizontal" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileCheck"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bluetickmark" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="bottom|center"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp">

                    <!--  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/custom_rectangle_button"
                          android:backgroundTint="@color/white"
                          android:gravity="center"
                          android:paddingLeft="@dimen/_5sdp"
                          android:paddingRight="@dimen/_5sdp">

                          <TextView
                              android:id="@+id/preferencecat"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/open_sans_semi_bold"
                              android:maxLength="16"
                              android:maxLines="1"
                              android:layout_weight="2"
                              android:padding="5dp"
                              android:gravity="center_horizontal"
                              android:layout_gravity="center_horizontal"
                              android:paddingBottom="@dimen/three"
                              android:singleLine="true"
                              android:text="Sports"
                              android:textColor="@color/black"
                              android:textSize="@dimen/thirteen" />

                      </LinearLayout>-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_rectangle_button"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/preferencecat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semi_bold"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:layout_weight="2"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="@dimen/three"
                            android:singleLine="true"
                            android:text="Sports"
                            android:textColor="@color/black"
                            android:textSize="@dimen/thirteen" />

                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
