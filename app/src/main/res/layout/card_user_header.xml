<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/online_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/_5sdp">

    <TextView
        android:id="@+id/onlineusertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/five"
        android:padding="@dimen/five"
        android:text="@string/nowonline"
        android:textColor="@color/appcolor"
        android:textSize="@dimen/thirteen"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/searchonline"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/ten"
            android:background="@drawable/ic_search"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <Button
            android:id="@+id/filteronline"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ten"
            android:background="@drawable/ic_filter"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/viewallonline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:gravity="center_vertical"
            android:padding="@dimen/five"
            android:text="@string/viewall"
            android:textColor="@color/skyblue"
            android:textSize="@dimen/_10sdp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/viewallCelebrities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/five"
            android:background="@drawable/submit_rectangle"
            android:gravity="center_vertical"
            android:padding="@dimen/five"
            android:text="All Celebrities"
            android:textColor="@color/white"
            android:textSize="@dimen/ten"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
