<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/managerBackgroundColor"
    tools:context="info.sumantv.flow.bottommenu.menuitemsmanager.fragments.my_schedules.CreateScheduleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/managerBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="0.3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iVBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:src="@drawable/ic_header_back" />

                    <include
                        layout="@layout/helper_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?android:actionBarSize"
                        android:layout_toRightOf="@+id/iVBack" />

                </RelativeLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Create Schedule-->
                <LinearLayout
                    android:id="@+id/LLCreateSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/managerBackgroundColor"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:gravity="center"
                            android:text="Call Type"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/LLScheduleAudioCall"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:src="@drawable/ic_audio"
                                    android:tint="@color/audio_icon_color" />

                                <info.sumantv.flow.fontstyles.TextViewMedium
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="Audio Call"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LLScheduleVideoCall"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="@dimen/_70sdp"
                                        android:src="@drawable/ic_video"
                                        android:tint="@color/video_icon_color" />

                                    <info.sumantv.flow.fontstyles.TextViewMedium
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:gravity="center"
                                        android:text="Video Call"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/schudule_background" />

                    <LinearLayout
                        android:id="@+id/LLAdsLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:paddingLeft="@dimen/_15sdp"
                            android:text="You might also be interested in :"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_14sdp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewOnline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_20sdp" />
                    </LinearLayout>
                </LinearLayout>
                <!--Service Timings-->
                <LinearLayout
                    android:id="@+id/LLServiceTimings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/managerBackgroundColor"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <info.sumantv.flow.fontstyles.TextViewMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lineatLayout"
                        android:background="@color/managerBackgroundColor"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:text="Schedule Timings"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <info.sumantv.flow.fontstyles.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lineatLayout"
                        android:background="@color/managerBackgroundColor"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Duration of schedule sholud be in between 10mins and 3 hours"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/lineatLayout_setTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_30sdp">

                        <RelativeLayout
                            android:id="@+id/relatvelayout_fromDate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_weight="1">

                            <info.sumantv.flow.fontstyles.TextViewMedium
                                android:id="@+id/textViewfrom"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="From"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <info.sumantv.flow.fontstyles.TextViewMedium
                                android:id="@+id/textView_fromDate"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/textViewfrom"
                                android:gravity="center|left"
                                android:hint="Date"
                                android:paddingTop="@dimen/_10sdp"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_10sdp" />

                            <View
                                android:id="@+id/viewFromdate"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/textView_fromDate"
                                android:background="@color/light_gray" />

                            <info.sumantv.flow.fontstyles.TextViewMedium
                                android:id="@+id/textView_fromTime"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/viewFromdate"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center|left"
                                android:hint="@string/time"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_10sdp" />

                            <View
                                android:id="@+id/viewFromTime"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/textView_fromTime"
                                android:background="@color/light_gray" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relatvelayout_toDate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <info.sumantv.flow.fontstyles.TextViewMedium
                                android:id="@+id/textViewTo"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="To"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <info.sumantv.flow.fontstyles.TextViewMedium
                                android:id="@+id/textView_toDate"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/textViewTo"
                                android:gravity="center|left"
                                android:hint="Date"
                                android:paddingTop="@dimen/_10sdp"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_10sdp" />

                            <View
                                android:id="@+id/viewTodate"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/textView_toDate"
                                android:background="@color/light_gray" />


                            <info.sumantv.flow.fontstyles.TextViewMedium
                                android:id="@+id/textView_toTime"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/viewTodate"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center|left"
                                android:hint="@string/time"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_10sdp" />

                            <View
                                android:id="@+id/viewTotime"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="1dp"
                                android:layout_below="@+id/textView_toTime"
                                android:background="@color/light_gray" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"

                        android:paddingBottom="@dimen/_30sdp">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                            android:id="@+id/tvServieTimingNext"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/submit_rectangle_for_settings"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_30sdp"
                            android:paddingRight="@dimen/_30sdp"
                            android:text="@string/bt_next"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/schudule_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10sdp">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Do more with CelebKonect"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginTop="@dimen/_10sdp">

                            <LinearLayout
                                android:id="@+id/LLChat"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/submit_rectangle_for_settings_empty_5dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/ic_chat_nav"
                                    android:tint="@color/chat_icon_color" />

                                <info.sumantv.flow.fontstyles.TextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Chat"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LLAudio"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/submit_rectangle_for_settings_empty_5dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:tint="@color/audio_icon_color"
                                    app:srcCompat="@drawable/ic_audio" />

                                <info.sumantv.flow.fontstyles.TextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Audio"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LLVideo"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/submit_rectangle_for_settings_empty_5dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/ic_videocam"
                                    android:tint="@color/video_icon_color" />

                                <info.sumantv.flow.fontstyles.TextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Video"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp">

                            <LinearLayout
                                android:id="@+id/LLPreferences"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/submit_rectangle_for_settings_empty_5dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/ic_preferences"
                                    android:tint="@color/menu_bg_preferences" />

                                <info.sumantv.flow.fontstyles.TextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Preferences"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LLAuditions"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/submit_rectangle_for_settings_empty_5dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/ic_auditions_new"
                                    android:tint="@color/menu_bg_auditions" />

                                <info.sumantv.flow.fontstyles.TextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Auditions"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LLEranCredits"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/submit_rectangle_for_settings_empty_5dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/ic_credits_navi" />

                                <info.sumantv.flow.fontstyles.TextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Earn Credits"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--Schedule Duration-->
                <LinearLayout
                    android:id="@+id/LLScheduleDuration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/managerBackgroundColor"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <info.sumantv.flow.fontstyles.TextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:text="Total schedule duration"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <info.sumantv.flow.fontstyles.TextViewBold
                            android:id="@+id/tvMinites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:text="180 Mins"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_22sdp" />
                    </LinearLayout>

                    <info.sumantv.flow.fontstyles.TextViewMedium
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/managerBackgroundColor"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text="Call Duration"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/white"
                        android:paddingRight="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_drop_down"
                            android:tint="@color/spinner_arrow_color" />

                        <Spinner
                            android:id="@+id/SPCallDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:paddingLeft="@dimen/_7sdp"
                            android:popupBackground="@color/white"
                            android:spinnerMode="dropdown"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </RelativeLayout>

                    <info.sumantv.flow.fontstyles.TextViewMedium
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/managerBackgroundColor"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text="Break Duration"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/white"
                        android:paddingRight="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_drop_down"
                            android:tint="@color/spinner_arrow_color" />

                        <Spinner
                            android:id="@+id/SPBreakDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:paddingLeft="@dimen/_7sdp"
                            android:popupBackground="@color/white"
                            android:spinnerMode="dropdown"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </RelativeLayout>

                    <info.sumantv.flow.fontstyles.TextViewMedium
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/managerBackgroundColor"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text="Total Slots"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <info.sumantv.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvTotalSlots"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />


                    <info.sumantv.flow.fontstyles.TextViewMedium
                        android:id="@+id/tvScheduleDurationNext"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_150sdp"
                        android:background="@drawable/submit_rectangle_for_settings"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingRight="@dimen/_30sdp"
                        android:text="@string/bt_next"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
                <!--Call Charges-->
                <LinearLayout
                    android:id="@+id/LLCallCharges"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/managerBackgroundColor"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <info.sumantv.flow.fontstyles.TextViewMedium
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@color/managerBackgroundColor"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text="Call charges (per min)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
