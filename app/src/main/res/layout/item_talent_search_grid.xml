<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="@dimen/_105sdp"
                android:background="@color/white"
                android:orientation="vertical">


    <ImageView
            android:id="@+id/circleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_grey_celebkonect_logo"
            />


    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg_black"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tvNameTalentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="Chenna Rao"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"/>

        <TextView
                android:id="@+id/tvSkills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="Actor"
                android:maxLines="1"
                android:ellipsize="end"

                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:gravity="right">

        <ImageButton
                android:id="@+id/ibFavourite"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:srcCompat="@drawable/ic_fav_white"
                style="@style/ibToolbar"
                android:contentDescription="@string/image"/>

        <ImageButton
                android:id="@+id/ibShare"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/image"
                app:srcCompat="@drawable/share_white"
                android:tint="@color/white"
                style="@style/ibToolbar"/>
    </LinearLayout>

</RelativeLayout>



